---
import "../styles/global.css";
const navItems = [
  { href: "/astro-blog", text: "Home" },
  { href: "/astro-blog/rlox", text: "RLox" },
  { href: "/astro-blog/game-of-life", text: "Game of Life" },
];
---

<header class="border-b">
  <div class="container mx-auto py-4">
    <nav class="flex w-full justify-between">
      {
        navItems.map((item) => (
          <a
            href={item.href}
            class="px-4 py-2 hover:bg-accent hover:text-accent-foreground rounded-md"
          >
            {item.text}
          </a>
        ))
      }
    </nav>
  </div>
</header>
