---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Game of Life Project">
  <div class="min-h-screen">
    <main class="container mx-auto py-8">
      <div class="space-y-6">
        <h1 class="text-4xl font-bold">Game of Life</h1>
        <p class="text-lg text-muted-foreground">
          An interactive implementation of Conway's Game of Life using React and
          Canvas.
        </p>
        <div class="prose dark:prose-invert">
          <h2>Features</h2>
          <ul>
            <li>Interactive grid</li>
            <li>Play/Pause controls</li>
            <li>Random seed generation</li>
            <li>Custom patterns</li>
          </ul>
        </div>
      </div>
    </main>
  </div>
</Layout>
